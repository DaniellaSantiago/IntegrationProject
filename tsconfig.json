{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "noEmitOnError": true,
      "esModuleInterop": true,
      "types": ["node"],
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "inlineSources": true,
      "lib": [
          "dom",
          "es2015"
      ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      ".vscode"
  ]
}